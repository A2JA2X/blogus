<h2 class="mt-5">アカウント</h2>
<small class="form-text text-muted">アカウントの編集を行うことができます。</small>
<div class="card shadow">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <label for="name">Name</label>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="mail">Email address</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <label for="pass">Password</label>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <label for="confirmPass">Confirm Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="confirmPass">現在のPassword</label>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions mb-5">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to "Back", :back %>
  </div>
</div>
<p class="text-danger mt-5">Dangerous zone</p>
<hr class="bg-danger">
<h3 class="text-danger">アカウントの削除</h3>
<p>不満でした? <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mb-3 shadow" %></p>
