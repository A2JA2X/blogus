<div class="card mt-5 mb-5">
	<img src="<%= @article.img_url %>" class="card-img-top" alt="...">
	<div class="card-body">
		<h5 class="card-title"><%= @article.title %></h5>
		<p class="card-text"><%= simple_format(@article.content) %></p>
		<p class="card-text"><small class="text-muted"><%= @article.updated_at %> 最終更新日</small></p>
	</div>
</div>
<div class="card mt-5">
  <div class="card-header">
    コメント一覧
  </div>
	<div class="comment p-3">
		<% @comments.each do |comment| %>
		<div class="card mb-3">
			<div class="card-body">
				<h5 class="card-title"><%= comment.user.name%></h5>
				<p class="card-text"><%= comment.content %></p>
				<p class="blockquote-footer"><%= comment.created_at %></p>
			</div>
		</div>
		<% end %>
	</div>
</div>

<div class="input-group mt-3 mb-3">
  <input type="text" class="form-control" placeholder="コメント" aria-label="Recipient's username" aria-describedby="button-addon2">
  <div class="input-group-append">
    <button class="btn btn-outline-secondary" type="button" id="button-addon2">コメント投稿</button>
  </div>
</div>
