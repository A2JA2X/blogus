<div class="container mt-5">
	<%= form_for @article, url:{ action: 'update', method: 'patch' } do |form|%>
		<div class="form-group">
			<label for="img">画像リンク</label>
			<%= form.text_field :img_url, id: "img", class: "form-control" %>
		</div>
		<div class="form-group">
			<label for="title">タイトル</label>
			<%= form.text_field :title, id: "title", class: "form-control" %>
		</div>
		<div class="form-group">
			<label for="content">内容</label>
			<%= form.text_area :content, id: "content", rows: "8", class: "form-control" %>
		</div>
		<div class="text-right">
			<%= form.submit "反映", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>