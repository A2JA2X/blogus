<%# コンテンツ %>
<div class="container">
  <% @articles.each do |article| %>
  <div class="card mt-5 shadow-sm">
    <div class="row no-gutters">
      <div class="col-md-6">
        <img src="<%= article.img_url %>" class="card-img shadow-sm" alt="<%= article.title %>">
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h1 class="card-title"><%= article.title %></h1>
          <hr>
          <p class="card-text text-truncate"><%= article.content %></p>
          <p class="card-text"><small class="text-muted"><%= article.created_at %> 投稿</small></p>
          <a href="/articles/<%= article.id %>" class="btn btn-primary">記事へ</a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%# ペジネーション %>
  <%= paginate @articles %>
</div>

