<%# コンテンツ %>
<% @articles.each do |article| %>
<div class="card mt-5 mb-5 shadow-sm">
  <div class="row no-gutters">
    <div class="col-md-6">
      <img src="<%= article.img_url %>" class="card-img shadow-sm" alt="<%= article.title %>">
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <h5><%= link_to article.user.name, user_path(article.user.id), class: "badge badge-pill badge-info float-right" %></h5>
        <h1 class="card-title"><%= article.title %></h1>
        <hr>
        <p class="card-text text-truncate"><%= article.content %></p>
        <p class="card-text"><small class="text-muted"><%= article.created_at %> 投稿</small></p>
        <%= link_to "記事へ", article_path(article.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<%# ペジネーション %>
<%= paginate @articles %>
