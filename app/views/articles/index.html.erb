<%# コンテンツ %>
<% @articles.each do |article| %>
<div class="card mt-5 shadow-sm">
  <div class="row no-gutters">
    <div class="col-md-6">
      <img src="<%= article.img_url %>" class="card-img shadow-sm" alt="<%= article.title %>">
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <h1 class="card-title"><%= article.title %></h1>
        <hr>
        <p class="card-text text-truncate"><%= article.content %></p>
        <p class="card-text"><small class="text-muted"><%= article.created_at %> 投稿</small></p>
        <a href="/articles/<%= article.id %>" class="btn btn-primary">記事へ</a>
      </div>
    </div>
  </div>
</div>
<% end %>
<%# ペジネーション %>
<div class="mt-5">
	<nav aria-label="Page navigation">
		<ul class="pagination">
				<li class="page-item"><a class="page-link" href="#">Previous</a></li>
				<li class="page-item active"><a class="page-link" href="#">1</a></li>
				<li class="page-item"><a class="page-link" href="#">2</a></li>
				<li class="page-item"><a class="page-link" href="#">3</a></li>
				<li class="page-item"><a class="page-link" href="#">Next</a></li>
		</ul>
	</nav>
</div>

